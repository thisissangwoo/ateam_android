<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E6E6"
    tools:context=".Box_Alarm.Box_Alarm_detailActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#696aad"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/imgv_box_detail_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="?attr/homeAsUpIndicator"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_box_detail_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnaFor"
            android:layout_gravity="center"
            android:textSize="28dp"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        android:elevation="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="AnaFor Box"
                android:textSize="28dp"
                android:gravity="center"
                android:textColor="#696aad"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#B6B6B6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="#696aad"
                android:text="알람내용"/>

            <EditText
                android:id="@+id/edt_box_alarm_content"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_st"
                android:hint="내용을 입력해주세요"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#B6B6B6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="#696aad"
                android:text="시간 설정"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_box_alarm_day"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:hint="요일"
                    android:background="@drawable/edt_st"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edt_box_alarm_time"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:hint="시"
                    android:background="@drawable/edt_st"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edt_box_alarm_minute"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:hint="분"
                    android:background="@drawable/edt_st"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#B6B6B6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:textColor="#696aad"
                        android:text="위치 설정"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/btn_box_alarm_location1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="1번"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/btn_box_alarm_location2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="2번"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/btn_box_alarm_location3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="3번"/>


                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/btn_box_alarm_location4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="4번"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_box_detail_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="취소"
                            android:textColor="#696aad"
                            android:textSize="18dp"
                            android:backgroundTint="#ccc"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_box_detail_insert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="저장"
                            android:textColor="#696aad"
                            android:textSize="18dp"
                            android:backgroundTint="#ccc"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>