<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_margin="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //약 이미지
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgv_pill_detail_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        //약 이름
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696aad"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="약 이름"/>

            <TextView
                android:id="@+id/tv_pill_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약이름~~~~~~"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ccc"/>



        </LinearLayout>

        //회사 이름
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696aad"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="회사 이름"/>


            <TextView
                android:id="@+id/tv_pill_detail_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회사이름~~~"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ccc"/>

        </LinearLayout>

        //약 효능
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696aad"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="약 효능"/>

            <TextView
                android:id="@+id/tv_pill_detail_efcy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약효능 설명~~~~~" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        //약 사용법
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696aad"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="약 사용법"/>

            <TextView
                android:id="@+id/tv_pill_detail_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약사용법 ~~~~~~~~~"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ccc"/>

        </LinearLayout>

        //약 부작용
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696aad"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="약 부작용"/>

            <TextView
                android:id="@+id/tv_pill_detail_se"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약부작용 ~~~~~~~~~"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#696aad"/>



        </LinearLayout>




    </LinearLayout>

</LinearLayout>