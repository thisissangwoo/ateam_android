<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pill_detail.Pill_detailActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hp_map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#696aad"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/imgv_pill_detail_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="?attr/homeAsUpIndicator"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_pill_detail_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anafor"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="처방전의 약정보"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="#696aad"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>

    <View
        android:layout_width="382dp"
        android:layout_height="2dp"
        android:layout_marginLeft="13dp"
        android:background="#ccc"
        android:layout_marginTop="8dp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recv_pill_detail_list"
        android:visibility="visible"/>

</LinearLayout>