<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    tools:context=".Box_Alarm.Box_Alarm_modifyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#696aad"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/imgv_box_modify_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="?attr/homeAsUpIndicator"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_box_modify_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnaFor"
            android:layout_gravity="center"
            android:textSize="28dp"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="AnaFor Box"
                android:textSize="28dp"
                android:gravity="center"
                android:textColor="#696aad"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#B6B6B6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="#696aad"
                android:text="알람내용"/>

            <EditText
                android:id="@+id/edt_boxAlarm_content"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLength="17"
                android:background="@drawable/edt_st"
                android:hint="내용을 입력해주세요"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#B6B6B6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="#696aad"
                android:text="시간 설정"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:timePickerMode="spinner"
                    android:id="@+id/time_picker_boxAlarm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#B6B6B6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="18dp"
                        android:textColor="#696aad"
                        android:text="위치 설정"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/checkBox_boxAlarm_number1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="1번"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/checkBox_boxAlarm_number2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="2번"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/checkBox_boxAlarm_number3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="3번"/>


                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/checkBox_boxAlarm_number4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#696aad"
                            android:textColor="@color/white"
                            android:text="4번"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_boxAlarm_delete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="삭제하기"
                            android:textColor="#696aad"
                            android:textSize="18dp"
                            android:backgroundTint="#ccc"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_boxAlarm_modify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="수정하기"
                            android:textColor="#696aad"
                            android:textSize="18dp"
                            android:backgroundTint="#ccc"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>