<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hp_Hash.Hp_HashActivity"
    android:orientation="vertical"
    android:background="#fff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/hp_hash_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#696aad"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/imgv_hp_hash_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="?attr/homeAsUpIndicator"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_hp_hash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnaFor"
            android:layout_gravity="center"
            android:textSize="28dp"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/schv_hp_hash_search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        android:layout_marginTop="20dp"
        app:queryHint="검색어를 입력해주세요"
        android:layout_gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자주 찾는 증상"
            android:textSize="20dp"
            android:textColor="#696aad"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

<!--RecyclerView로 바꾸고 item이 TextView -->

            <TextView
                android:id="@+id/tv_hp_hash_top_gamgi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="감기"/>

            <TextView
                android:id="@+id/tv_hp_hash_top_disk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#696aad"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="디스크"/>

            <TextView
                android:id="@+id/tv_hp_hash_top_biyeom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#696aad"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="비염"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="대표적인 증상"
            android:textSize="20dp"
            android:textColor="#696aad"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="-8dp"
        app:cardUseCompatPadding="true"
        android:elevation="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginLeft="-5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hp_hash_gamgi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감기"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_disk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:text="디스크"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_biyeom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비염"
                android:paddingLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_saenglibulsun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:text="생리불순"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_jungiyeom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="28dp"
                android:text="중이염"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hp_hash_banggwangyeom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="방광염"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_soajinlyo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="소아진료"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_goljeol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="골절"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_chitong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="치통"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_seonghyeong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="성형"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hp_hash_lasig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="라식/라섹"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_angugeonjo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="안구건조"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_uuljeung"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="우울증"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_gonghwangjangae"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="공황장애"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hp_hash_yeodeuleum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="여드름"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_yeomjeung"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="염증"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_jongyang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="종양"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_hp_hash_singyeongtong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="신경통"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>